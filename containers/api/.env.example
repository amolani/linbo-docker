# =============================================================================
# LINBO Docker API - Environment Configuration
# Copy this file to .env for local development
# In Docker, these are set via docker-compose.yml
# =============================================================================

# Environment
NODE_ENV=development

# Server
PORT=3000
HOST=0.0.0.0

# Database (Prisma)
DATABASE_URL=postgresql://linbo:linbo_secret_password@localhost:5432/linbo?schema=public

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SECRET=development_secret_change_in_production
JWT_EXPIRES_IN=24h

# CORS
CORS_ORIGIN=*

# SSH (for remote commands to clients)
SSH_HOST=localhost
SSH_PORT=2222
SSH_USER=root
SSH_PRIVATE_KEY=/etc/linuxmuster/linbo/ssh_host_rsa_key
SSH_TIMEOUT=10000

# Storage paths
LINBO_DATA_DIR=/srv/linbo
LINBO_IMAGE_DIR=/srv/linbo/images
LINBO_CONFIG_DIR=/etc/linuxmuster/linbo
LINBO_LOG_DIR=/var/log/linuxmuster/linbo

# Logging
LOG_LEVEL=debug

# Feature flags
ENABLE_AUDIT_LOG=true
